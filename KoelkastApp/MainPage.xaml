<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoelkastApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Padding="30,-90,0,-60"
                Text="Coolkast"
                HorizontalOptions="Center"
                FontSize="210"
                FontFamily="DeathMohawk"/>
            <Image
                IsOpaque="True"
                Source="splash.png"
                HeightRequest="345"
                Aspect="AspectFill" />

            <Label
                Padding="30,-10,0,-0"
                Text="Welkom bij de koelkast app"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                x:Name="CreateAccBtn"
                Text="Account maken"
                Clicked="CreateAccBtn_Clicked"
                FontSize="20"
                FontAttributes="Bold"/>

            <Button
                x:Name="LoginBtn"
                Text="Inloggen" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="LoginClicked"
                FontSize="20"
                FontAttributes="Bold"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
