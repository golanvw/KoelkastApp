<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoelkastApp.ProductSettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label
                Text="Product naam"/>
            <Entry
                Placeholder="Product Naam"/>
            <Label
                Text="Product prijs"/>
            <Entry
                Placeholder="Product prijs"/>
            <Label
                Text="Minimum aantal"/>
            <Entry
                Placeholder="Minimum aantal"/>
            <Button
                x:Name="SaveSettingsBtn"
                Text="instellingen opslaan"
                Clicked="SaveSettingsBtn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>