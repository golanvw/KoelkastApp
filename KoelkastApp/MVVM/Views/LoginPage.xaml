<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoelkastApp.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Inloggen"
                HorizontalOptions="CenterAndExpand" />
            <Label
                x:Name="Error"
                Text=""
                TextColor="Red"
                HorizontalOptions="CenterAndExpand"/>
            <Entry
                Margin="0,10,0,0"
                x:Name="Username"
                Placeholder="Gebruikersnaam"/>
            <Entry
                Margin="0,10,0,0"
                x:Name="Password"
                Placeholder="Wachtwoord"
                IsPassword="True"/>

            <Button
                Margin="0,5,0,0"
                x:Name="LoginBtn"
                Text="Inloggen"
                Clicked="LoginBtn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>