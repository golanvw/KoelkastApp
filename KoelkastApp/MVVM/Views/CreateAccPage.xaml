<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoelkastApp.CreateAccPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Inloggen"
                HorizontalOptions="CenterAndExpand" />
            <Label
                x:Name="Error"
                Text=""
                TextColor="Red"
                HorizontalOptions="CenterAndExpand"/>
            <Entry
                x:Name="Username"
                Placeholder="Gebruikersnaam"/>
            <Entry
                x:Name="Password"
                Placeholder="Wachtwoord"
                IsPassword="True"/>
            <Button
                x:Name="CreateAccBtn"
                Text="Account aanmaken"
                Clicked="CreateAccBtn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>